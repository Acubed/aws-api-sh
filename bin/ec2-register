#!/bin/sh

source aws-api-lib

QUERY=""

while (( "$#" )); do
	case $1 in
		-O|--aws-access-key) AWS_ACCESS_KEY="$2"; shift ;;
		-W|--aws-secret-key) AWS_SECRET_KEY="$2"; shift ;;
		-d) DESCRIPTION="$2"; shift ;;
		--*)
			echo "Unknown argument $1" 1>&2
			exit ;;
		*) VOLUME="$1" ;;
	esac
	shift
done

if [ -z "$VOLUME" ]; then
	echo "No volume provided" 1>&2
	exit 1
fi

check_creds




ec2 GET CreateSnapshot $AWS_ACCESS_KEY $AWS_SECRET_KEY "$QUERY"
