#!/bin/sh

source aws-api-lib

RESOURCES=""
TAGS=()

while (( "$#" )); do
	case $1 in
		-O|--aws-access-key) AWS_ACCESS_KEY="$2"; shift ;;
		-W|--aws-secret-key) AWS_SECRET_KEY="$2"; shift ;;
		--tag) TAGS+=("$2"); shift ;;
		-*)
			echo "Unknown argument $1" 1>&2
			;;
		*)
			RESOURCES="$RESOURCES $1"
			exit ;;
	esac
	shift
done


if [[ ( -z "$SIZE" ) && ( -z "$SNAPSHOT" ) ]]; then
	echo "No size or snapshot provided" 1>&2
	exit 1
fi

check_creds

Query=""

I=0
for R in $RESOURCES; do
	Query="$Query&ResourceId=$R"
done

I=0
for R in "${TAGS[@]}"; do
	Query="$Query&Tag.$I.Key=${R}&Tag.$I.Value=${R}"
done

ec2 POST CreateTags $AWS_ACCESS_KEY $AWS_SECRET_KEY "$Query"
